<h1>Login</h1>
<hr>
<form action="http://localhost:3000/api/sessions/login" method="POST">

    {{#if err}}
        <div>
            <p style="color: red;">{{errDetail}}</p>
        </div>
    {{/if}}

    {{#if message}}
        <div>
            <p style="color: green;">{{message}}</p>
        </div>
    {{/if}}

    {{#if createdUser}}
        <input type="email" placeholder="Enter your email" value='{{userEmail}}' name="email" id="email-input">
    {{else}}
        <input type="email" placeholder="Enter your email" name="email" id="email-input">
    {{/if}}

    <input type="password" placeholder="Enter your password" name="password" id="password-input">

    <input type="submit" value="Login">
</form>
<hr>
<button onclick="redirectGithubRoute()">Login with Github</button>
<button onclick="recoveryPassword()">Forgot pass?</button>

{{>menu}}

<script>
    function redirectGithubRoute(){
        window.location = '/api/sessions/github'
    }

    function recoveryPassword(){
        window.location = '/recoveryPassword'
    }
</script>